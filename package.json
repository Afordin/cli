{
  "name": "@afordin/cli",
  "repository": "afordin/cli",
  "description": "Afordin CLI",
  "version": "0.2.1-beta.1",
  "keywords": [
    "afordin",
    "afordin-cli"
  ],
  "author": "Afordin <info@afordin.com> (https://afordin.com)",
  "contributors": [
    "Juan Pablo <juanpablo.is@outlook.com> (https://jotapeis.tech)"
  ],
  "type": "module",
  "homepage": "https://github.com/afordin/cli",
  "bugs": "https://github.com/afordin/cli/issues",
  "bin": {
    "afordin": "./bin/run.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "prepare": "npm run build",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "release": "bumpp package.json packages/*/package.json"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^3",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "bumpp": "^9.2.0",
    "chai": "^4",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9.0.0",
    "mocha": "^10",
    "oclif": "^4.0.3",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5"
  },
  "dependencies": {
    "@afordin/create": "latest",
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^4"
  },
  "peerDependencies": {
    "@afordin/create": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "oclif": {
    "bin": "afordin",
    "dirname": "afordin",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ]
  },
  "types": "dist/index.d.ts",
  "exports": "./lib/index.js"
}
